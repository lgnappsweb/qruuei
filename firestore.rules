rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Allow any authenticated user to read user profiles.
      allow read: if request.auth != null;
      
      // Only allow a user to create, update, or delete their own profile.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/notes/{noteId} {
      // Only the owner can read and write their own notes.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/messages/{messageId} {
      // Only the owner can read and update (e.g., mark as read) their own messages.
      // Creation and deletion should be handled by a backend/admin process.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create, delete: if false;
    }
  }
}
