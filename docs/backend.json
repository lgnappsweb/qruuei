{
  "entities": {
    "user": {
      "title": "User",
      "description": "A user of the application.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        }
      }
    },
    "note": {
      "title": "Note",
      "description": "A user's note.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the note."
        },
        "content": {
          "type": "string",
          "description": "The content of the note."
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "The last updated timestamp of the note."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who owns the note."
        }
      },
      "required": [
        "userId",
        "updatedAt"
      ]
    },
    "image": {
      "title": "Image",
      "description": "A user's saved image.",
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the image."
        },
        "imageUrl": {
          "type": "string",
          "format": "uri",
          "description": "The URL of the image."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp of when the image was added."
        },
        "userId": {
          "type": "string",
          "description": "The ID of the user who owns the image."
        }
      },
      "required": [
        "userId",
        "imageUrl",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "google.com",
      "password"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/user"
      },
      "description": "Stores public profile information for each user."
    },
    "/users/{userId}/notes/{noteId}": {
      "schema": {
        "$ref": "#/backend/entities/note"
      },
      "description": "Stores notes for each user."
    },
    "/users/{userId}/images/{imageId}": {
      "schema": {
        "$ref": "#/backend/entities/image"
      },
      "description": "Stores images for each user."
    }
  }
}
